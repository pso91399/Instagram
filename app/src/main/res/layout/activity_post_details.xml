<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostDetailsActivity">

    <TextView
        android:id="@+id/tvUserHandle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TopUserHandle"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="70dp" />

    <ImageView
        android:id="@+id/ivImagePost"
        android:layout_width="match_parent"
        android:layout_height="356dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvUserHandle"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/tvUserHandle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="10dp"
        android:text="BottomUserHandle" />

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="326dp"
        android:layout_height="41dp"
        android:layout_alignTop="@+id/tvUserHandle2"
        android:layout_toEndOf="@+id/tvUserHandle2"
        android:text="Caption" />

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvUserHandle2"
        android:layout_marginTop="-41dp"
        android:text="timestamp" />
</RelativeLayout>