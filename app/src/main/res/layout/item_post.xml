<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvUser"
        android:layout_width="265dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:text="User"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivPostImage"
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvUser"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="106dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        android:layout_marginStart="11dp"
        android:text="Caption"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/anon_profilepic" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tvCaption"
        android:layout_marginBottom="99dp"
        android:layout_marginStart="-11dp"
        app:srcCompat="@drawable/ufi_heart" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        app:srcCompat="@drawable/ufi_comment" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="49dp"
        android:layout_height="44dp"
        android:layout_above="@+id/tvCaption"
        android:layout_toEndOf="@+id/imageView4"
        app:srcCompat="@drawable/ufi_new_direct" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView3"
        app:srcCompat="@drawable/ufi_save" />

    <TextView
        android:id="@+id/tvRealCaption"
        android:layout_width="302dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/tvCaption"
        android:layout_marginStart="-3dp"
        android:layout_toEndOf="@+id/tvCaption"
        android:text="TextView" />
</RelativeLayout>